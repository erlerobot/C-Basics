//guess the number
#include <iostream>
using namespace std;

int max = 100;
int min = 0;

int main(){
	int g = rand()%(max-min)+min;
	int x = 0;
	while(true){
		cout << "guess a number between 0 and 100" << endl;
		if (cin >> g){
			cout << "the number is too high! Try again" << endl;
		}
		elif (cin << g){ 
			cout << "the number is too low! Try again" << endl;
		}
		else{
			cout << "Thats the one!" << endl;
			cout << "You needed "<< x <<" trials"<< endl;
			break;
		}
		x=x+1;
	}
    return 0;
}